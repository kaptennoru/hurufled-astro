<script>
  // Try loading local images first, fallback to online
  document.querySelectorAll('.service-img[data-local]').forEach((img) => {
    const el = img as HTMLImageElement;
    const localSrc = el.dataset.local;
    if (!localSrc) return;
    const testImg = new Image();
    testImg.onload = () => { el.src = localSrc; };
    testImg.src = localSrc;
  });
</script>

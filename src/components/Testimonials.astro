<section class="testimonials" id="testimonials">
  <div class="container">
    <div class="testi-header">
      <span class="section-label">TESTIMONIALS</span>
      <h2 class="section-title">Apa Kata <span class="neon-purple">Klien</span> Kami?</h2>
      <p class="section-subtitle">
        Kepuasan pelanggan adalah prioritas utama kami. Dengarkan pengalaman nyata mereka bersama HurufLED.
      </p>
    </div>
    <div class="testi-grid">
      {testimonials.map(t => (
        <div class="testi-card">
          <div class="testi-stars">★★★★★</div>
          <p class="testi-text">"{t.text}"</p>
          <div class="testi-author">
            <img src={t.img} alt={t.name} width="46" height="46" loading="lazy" />
            <div>
              <div class="testi-author-name">{t.name}</div>
              <div class="testi-author-role">{t.role}</div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
